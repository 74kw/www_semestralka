//get ids of tags paired to this article
$tags = $db->getArticleTags($id);

?>
<div>
    <h1><?php echo $title?></h1>
    <hr>
    <div class="metadata">
        <p>Autor: <?php echo $userName . ' ' . $userNameLast?></p>
        <p><?php echo $created?></p>
    </div>
