        <p>Tagy: <?php
            foreach ($tags as $row) {
                //Get name of each tag paired with the article
                $tag = $db->getTag($row["idTags"]);
                $tagName = $tag["name"]??'';
                echo  $tagName . ' ';
            }?></p>
    </div>
    <div class="getRating">
        <p>Hodnocení článku: <b><?php $pole =$db->getArticleRating($id);
        if ($pole[0] === 0)
            echo 'NaN';
        else{
        echo $pole[0];}?>/10</b></p>
        <p class="ratingCount"><i>(Počet uživatelů, kteří ohodnotili článek: <?php echo $pole[1]?>)</i></p>
    </div>
    <hr>
    <div class="content">
        <p><?php echo $content?><p>
    </div>
    <hr>
    <?php
    if (isset($_SESSION['userName'])){
        if (!$db->getUserAlreadyRate($id,$_SESSION['userId']??'')){
            echo '<div class="setRating">';
